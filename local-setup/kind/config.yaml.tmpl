kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
- role: control-plane
  extraMounts:
  - hostPath: /dev/shm/kind-storage
    containerPath: /var/lib/containerd
  extraPortMappings:
  - containerPort: 80
    hostPort: ${http_ingress_port}
    protocol: TCP
  - containerPort: 443
    hostPort: ${https_ingress_port}
    protocol: TCP
