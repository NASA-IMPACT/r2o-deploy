terraform {
  backend "s3" {
    region         = "${AWS_REGION:-us-west-2}"
    bucket         = "${LOCAL_DEPLOY_STATE_BUCKET_NAME:-r2o-tf-state-bucket}"
    key            = "${LOCAL_DEPLOY_STATE_BUCKET_KEY:-${PREFIX}/local-deployment/terraform.tfstate}"
    dynamodb_table = "${LOCAL_DEPLOY_STATE_DYNAMO_TABLE:${PREFIX}-lock-state-table"
  }
}
